<block>
    <view class="countdown">
        <view class="clearfix">
            <view class="left time hour">{{hours}}
                <view class="devide"></view>
            </view>
            <view class="left time min">{{minutes}}
                <view class="devide"></view>
            </view>
            <view class="left time sec">{{seconds}}</view>
        </view>
        <view class="clearfix">
            <view class="left time-title hour">HOU</view>
            <view class="left time-title min">MIN</view>
            <view class="left time-title sec">SEC</view>
        </view>
    </view>
</block>