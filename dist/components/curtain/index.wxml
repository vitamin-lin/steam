<block>
    <view>
        <block wx:if="{{open}}">
            <view class="dis">
                <view class="bgs"></view>
                <view class="modas" catchtouchmove="anonymousFunc0">
                    <view class="mai">
                        <view class="iconzs" bindtap="close">
                            <at-icon value="close" __triggerObserer="{{ _triggerObserer }}" size="20"></at-icon>
                        </view>
                        <view bindtap="makesz">
                            <view class="txta">以免让优惠券</view>
                            <view class="txtb">默默的飞走</view>
                            <view class="txtb">戳我开启订阅提醒</view>
                        </view>
                    </view>
                </view>
            </view>
        </block>
        <view class="{{total == 0 ? 'wraps' : 'curtains'}}">
            <view class="coupon" style="{{anonymousState__temp}}">
                <view class="{{closes}}" bindtap="closeDia"></view>
                <view class="headsa">{{total_discount == 0 ? '天降优惠券' : '天降' + total_discount / 100 + '元优惠券'}}</view>
                <view class="main">
                    <view wx:key="index" class="coupon_a" style="background:url(https://mpmall.huggiesapp.cn/storage/wxmall/share/coupon_a.png) no-repeat;background-size: 100% auto;" wx:for="{{lists}}" wx:for-item="item" wx:for-index="index">
                        <view>
                            <block>
                                <block wx:if="{{item.type == 3}}">
                                    <view class="heads">
                                        <view class="leftTxt"><text class="icon">{{item.discount / 10 ? item.discount / 10 : 0}}</text><text class="nums">折</text>
                                        </view><text class="detail">{{item.name}}</text>
                                    </view>
                                </block>
                                <block wx:else>
                                    <view class="heads">
                                        <view class="leftTxt"><text class="icona">¥</text><text class="nums">{{item.discount / 100 ? item.discount / 100 : 0}}</text>
                                        </view><text class="detail">{{item.name}}</text>
                                    </view>
                                </block>
                            </block>
                            <view class="time">有效期 {{item.date_start}}~{{item.date_end}}</view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</block>