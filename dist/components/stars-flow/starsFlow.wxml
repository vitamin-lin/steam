<block>
    <view class="waterfall-box">
        <view class="tit">
            <image src="{{tits}}" mode="widthFix" class="pic"></image>
        </view>
        <view class="waterfall">
            <view class="List-left">
                <view class="startsCard" wx:key="index" wx:for="{{arrs}}" wx:for-item="item" wx:for-index="index">
                    <block wx:if="{{android}}">
                        <view class="andro" bindtap="toLink" data-e-tap-so="this" data-e-tap-a-a="{{item}}"></view>
                    </block>
                    <view class="box">
                        <image src="{{item.imgSrc}}" mode="widthFix" class="pic" bindtap="toLink" data-e-tap-so="this" data-e-tap-a-a="{{item}}"></image>
                        <view class="seaTit">{{item.title}}</view>
                        <view class="main">
                            <image src="{{item.header}}" mode="widthFix" class="headPic"></image><text class="tits">{{item.name}}</text>
                            <view bindtap="dianzna" class="star" data-e-tap-so="this" data-e-tap-a-a="{{item.id}}"></view>
                            <image src="{{!item.awesome ? heart : hearts}}" mode="widthFix" class="heart"></image><text class="nums">{{item.awesome_total}}</text>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</block>