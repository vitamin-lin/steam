<block>
    <view>
        <view class="waterfall-box">
            <view class="tit">
                <image src="{{tits}}" mode="widthFix" class="pic"></image>
            </view>
            <view class="waterfall">
                <view class="List-left">
                    <view class="startsCard" wx:key="index" wx:for="{{leftData}}" wx:for-item="item" wx:for-index="index">
                        <view class="box">
                            <image src="{{item.banner_image_path}}" mode="widthFix" class="pic" bindtap="toLink" data-e-tap-so="this" data-e-tap-a-a="{{item.id}}"></image>
                            <view class="main"><text class="tits">{{item.name}}</text>
                                <image src="{{item.awesome ? heart : heartInit}}" mode="widthFix" class="heart"></image><text class="nums">{{item.awesome_total}}</text>
                                <view class="zan" bindtap="clickZan" data-e-tap-so="this" data-e-tap-a-a="{{item.id}}"></view>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="List-right">
                    <view class="startsCard" wx:key="index" wx:for="{{rightData}}" wx:for-item="item" wx:for-index="index">
                        <view class="box">
                            <image src="{{item.banner_image_path}}" mode="widthFix" class="pic" bindtap="toLink" data-e-tap-so="this" data-e-tap-a-a="{{item.id}}"></image>
                            <view class="main"><text class="tits">{{item.name}}</text>
                                <image src="{{item.awesome ? heart : heartInit}}" mode="widthFix" class="heart"></image><text class="nums">{{item.awesome_total}}</text>
                                <view class="zan" bindtap="clickZan" data-e-tap-so="this" data-e-tap-a-a="{{item.id}}"></view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <block wx:if="{{recommendable_three}}">
            <stars-flow types="{{anonymousState__temp}}" __triggerObserer="{{ _triggerObserer }}"></stars-flow>
        </block>
    </view>
</block>