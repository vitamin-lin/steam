<block>
    <view class="box">
        <banner datas="{{data}}" __triggerObserer="{{ _triggerObserer }}" bindonhandlechange="onhandleChange" __fn_onhandleChange="{{true}}" data-e-onhandlechange-so="this" data-e-onhandlechange-a-a="{{id}}"></banner>
        <at-curtain isOpened="{{isOpened}}" __triggerObserer="{{ _triggerObserer }}">
            <view class="main">
                <view class="alerts">
                    <image src="{{alert}}" mode="widthFix"></image>
                    <button class="leftShare" open-type="share" catchtap="anonymousFunc0"></button>
                    <view class="rightShare" bindtap="shareInfo" data-e-tap-so="this" data-e-tap-a-a="{{gid}}" data-e-tap-a-b="{{gid_pic}}" data-e-tap-a-c="{{id}}"></view>
                </view>
                <image src="{{alertClose}}" mode="widthFix" class="close" bindtap="onClose"></image>
            </view>
        </at-curtain>
    </view>
</block>